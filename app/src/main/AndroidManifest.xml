<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.desafioandroidcore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesafioAndroidCore">
        <activity
            android:name=".ui.activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.LoginActivity" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:parentActivityName=".ui.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activities.HomeActivity" />
        <activity
            android:name=".ui.activities.CardapioActivity"
            android:parentActivityName=".ui.activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.DetalhesPratoActivity"
            android:parentActivityName=".ui.activities.CardapioActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>